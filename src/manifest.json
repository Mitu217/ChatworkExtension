{
    "manifest_version": 2,
    "name": "ChatWork Extension Neo",
    "version": "1.2",
    "description": "ChatWork Extensionの機能追加版です",
    "homepage_url": "https://github.com/Mitu217/ChatworkExtension",
    "author": "Mamoru Uehara",
    "content_scripts": [
        {
            "matches": [ "https://kcw.kddi.ne.jp/*", "https://www.chatwork.com/*" ],
            "js": [
                "chatworkextension.core.js",
                "chatworkextension.extensions.js",
                "chatworkextension.starter.js",
                "migemojs/migemo.js",
                "highlightjs/highlight.pack.js"
            ],
            "css": [ "style_before.css", "jquery-textcomplete/jquery.textcomplete.css" ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "style.css",
        "extensions/*.css",
        "chatworkextension.bridge.js",
        "chatworkextension.customscripts.js",
        "dicts/*.txt",
        "migemojs/migemo.js",
        "jquery/jquery.min.js",
        "jquery-cookie/jquery.cookie.min.js",
        "jquery-textcomplete/jquery.textcomplete.min.js",
        "highlightjs/styles/*.css"
    ],
    "options_page": "settings.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
      "storage",
      "webRequest",
      "webRequestBlocking",
      "*://kcw.kddi.ne.jp/",
      "*://www.chatwork.com/"
    ],
    "background": {
        "scripts": [ "chatworkextension.background.js" ]
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
