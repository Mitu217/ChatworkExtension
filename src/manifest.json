{
    "manifest_version": 2,
    "name": "ChatWork Extension",
    "version": "0.37564.4",
    "description": "ChatWork or die",
    "content_scripts": [
        {
            "matches": [ "https://kcw.kddi.ne.jp/*", "https://www.chatwork.com/*" ],
            "js": [
                "chatworkextension.core.js",
                "chatworkextension.extensions.js",
                "chatworkextension.starter.js",
                "migemojs/migemo.js",
                "highlightjs/highlight.pack.js"
            ],
            "css": [ "style_before.css" ],
            "run_at": "document_start"
        }
    ],
  "web_accessible_resources": ["style.css", "extensions/*.css", "chatworkextension.bridge.js", "chatworkextension.customscripts.js","dicts/*.txt", "migemojs/migemo.js", "highlightjs/styles/*.css"],
  "options_page": "settings.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions":  [ "storage" ],
  "background": {
     "scripts": [ "chatworkextension.background.js" ]
  }
}